{
  "compilerOptions": {
    // "target": "esnext",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "noImplicitAny": false,
    // https://medium.com/@VincentSchoener/say-bye-to-relative-paths-in-typescript-7242b6e6f252
    // https://dev.to/larswaechter/path-aliases-with-typescript-in-nodejs-4353
    // https://github.com/dividab/tsconfig-paths/issues/61#issuecomment-433329831
    "paths": {
      "src/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
